{
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noDebugger": "off",
        "noConsole": "off",
        "noAssignInExpressions": "off",
        "noExplicitAny": "off",
        "noApproximativeNumericConstant": "off"
      },
      "style": {
        "noShoutyConstants": "warn",
        "useNamingConvention": "off",
        "noParameterAssign": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off"
      }
    }
  }
}
